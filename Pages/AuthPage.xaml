<Page x:Class="_122_Zyamilov_Chzhen.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_122_Zyamilov_Chzhen"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- Основное содержимое -->
        <Viewbox Grid.Row="1" Stretch="Uniform" MaxWidth="800" MaxHeight="800" Margin="0,0,0,27">
            <Border Background="{DynamicResource CenterBackground}" CornerRadius="10" Padding="20" Height="400">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок и подзаголовок -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                               Text="Добро пожаловать в систему" 
                               FontSize="24" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2" 
                               Text="Пожалуйста, введите ваш логин и пароль" 
                               FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Поле логина -->
                    <TextBlock Grid.Row="2" Text="Логин" FontSize="14" Margin="0,0,10,5"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="TextBoxLogin"
                             Background="Transparent" Height="30" Margin="0,0,0,10"
                             TextWrapping="Wrap" ToolTip="Введите логин или почту"
                             TextChanged="TextBoxLogin_TextChanged"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LoginErrorText" 
                               Foreground="Red" FontSize="12" Visibility="Hidden"/>

                    <!-- Поле пароля -->
                    <TextBlock Grid.Row="4" Text="Пароль" FontSize="14" Margin="0,0,10,5"/>
                    <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="PasswordBox"
                                 Background="Transparent" Height="30" Margin="0,0,0,10"
                                 ToolTip="Введите пароль" Visibility="Visible"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="PasswordTextBox"
                             Background="Transparent" Height="30" Margin="0,0,0,10"
                             TextWrapping="Wrap" ToolTip="Введите пароль" Visibility="Hidden"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="PasswordErrorText" 
                               Foreground="Red" FontSize="12" Visibility="Hidden"/>

                    <!-- CheckBox для отображения пароля -->
                    <CheckBox Grid.Row="6" Grid.Column="1" x:Name="ShowPasswordCheckBox"
                              Content="Показать пароль" FontSize="12" Margin="0,0,0,10"
                              Checked="ShowPasswordCheckBox_Checked" 
                              Unchecked="ShowPasswordCheckBox_Unchecked"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button x:Name="ButtonEnter" Content="Вход" Width="120" Height="30" Margin="0,0,10,0"
                                ToolTip="Кнопка входа" Click="ButtonEnter_OnClick"/>
                        <Button x:Name="ButtonReg" Content="Регистрация" Width="120" Height="30" Margin="0,0,10,0"
                                ToolTip="Кнопка регистрации" Click="ButtonReg_Click"/>
                        <Button x:Name="ButtonChangePassword" Content="Смена пароля" Width="120" Height="30"
                                ToolTip="Кнопка смены пароля" Click="ButtonChangePassword_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Page>
