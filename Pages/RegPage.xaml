<Page x:Class="_122_Zyamilov_Chzhen.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_122_Zyamilov_Chzhen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основное содержимое -->
        <Viewbox Grid.Row="1" Stretch="Uniform" MaxWidth="800" MaxHeight="800" Margin="0,0,0,27">
            <Border Background="{DynamicResource CenterBackground}" CornerRadius="10" Padding="20" Height="550">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="300"/>

                    </Grid.ColumnDefinitions>

                    <!-- Заголовок и подзаголовок -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" 
                               Text="Регистрация в системе" 
                               FontSize="24" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Grid.Row="1" Grid.ColumnSpan="3" 
                               Text="Заполните все поля для регистрации" 
                               FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <!-- Поле логина -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Логин" FontSize="14" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtbxLog"
                              Height="30" Margin="0,0,0,10" Width="300"
                             HorizontalAlignment="Left" TextWrapping="Wrap" 
                             ToolTip="Введите логин или почту"/>
                    

                    <!-- Поле пароля -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Пароль" FontSize="14" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="passBxFrst"
                                  Height="30" 
                                 Margin="0,0,0,10" Width="300" HorizontalAlignment="Left"
                                 ToolTip="Введите пароль"/>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="passBxFrstText"
                              Height="30" Margin="0,0,0,10" Width="300"
                             HorizontalAlignment="Left" TextWrapping="Wrap" 
                             ToolTip="Введите пароль" Visibility="Hidden"/>


                    <!-- Поле подтверждения пароля -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Подтверждение пароля" FontSize="14" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="passBxScnd"
                                  Height="30" 
                                 Margin="0,0,0,10" Width="300" HorizontalAlignment="Left"
                                 ToolTip="Повторите пароль"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="passBxScndText"
                              Height="30" Margin="0,0,0,10" Width="300"
                             HorizontalAlignment="Left" TextWrapping="Wrap" 
                             ToolTip="Повторите пароль" Visibility="Hidden"/>

                    <!-- Поле ФИО -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="ФИО" FontSize="14" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtbxFIO"
                              Height="30" Margin="0,0,0,10" Width="300"
                             HorizontalAlignment="Left" TextWrapping="Wrap" 
                             ToolTip="Введите ФИО"/>


                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Фотография" FontSize="14" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <Button Grid.Row="6" Grid.Column="1" x:Name="btnUploadPhoto"
                            Content="Выбрать фото" Width="150" Height="30" Margin="0,0,0,10"
                            HorizontalAlignment="Left" ToolTip="Выберите файл изображения (.jpg, .png)"
                            Click="btnUploadPhoto_Click"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" x:Name="lblPhotoFileName"
                               Foreground="Gray" Text="Файл не выбран" FontSize="12" 
                               Margin="0,0,0,10" Width="300" HorizontalAlignment="Left"/>

                    <!-- Выбор роли -->
                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Роль" FontSize="14" Margin="0,0,10,5" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="8" Grid.Column="1" x:Name="comboBxRole"
                          ToolTip="Выберите роль" Height="30" Margin="0,0,0,10" Width="300"
                          HorizontalAlignment="Left"
                          Background="White" Foreground="Black" BorderBrush="Gray"> 
                        <ComboBoxItem Content="User" Foreground="Black"/>
                        <ComboBoxItem Content="Admin" Foreground="Black"/>
                    </ComboBox>

                    <!-- CheckBox для отображения пароля -->
                    <CheckBox Grid.Row="9" Grid.Column="1" x:Name="ShowPasswordCheckBox"
                              Content="Показать пароль" FontSize="12" Margin="0,0,0,10"
                              ToolTip="Показать/скрыть пароль" HorizontalAlignment="Left"
                              Checked="ShowPasswordCheckBox_Checked" Unchecked="ShowPasswordCheckBox_Unchecked"/>

                    <!-- Кнопка регистрации -->
                    <Button Grid.Row="10" Grid.Column="1" x:Name="regButton"
                            Content="Зарегистрироваться" Width="150" Height="30" Margin="0,0,0,10"
                            ToolTip="Зарегистрировать нового пользователя" HorizontalAlignment="Left"
                            Click="regButton_Click"/>
                </Grid>
            </Border>
        </Viewbox>
    </Grid>
</Page>
