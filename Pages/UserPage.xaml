<Page x:Class="_122_Zyamilov_Chzhen.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_122_Zyamilov_Chzhen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Фильтры и кнопки -->
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Margin="0,10,0,10" Width="800">
            <TextBlock Text="Введите ФИО для поиска:" FontSize="12"  Margin="0,0,7,0"/>
            <TextBox x:Name="fioFilterTextBox" MinWidth="100" TextChanged="fioFilterTextBox_TextChanged"/>
            <TextBlock Text="Сортировка по ФИО:" Margin="10,0,7,0" FontSize="12" />
            <ComboBox x:Name="sortComboBox" Margin="7,0,0,0" SelectedIndex="0" SelectionChanged="sortComboBox_SelectionChanged">
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>
            <CheckBox x:Name="onlyAdminCheckBox" IsChecked="False" Content="Только администраторы"
                      Checked="onlyAdminCheckBox_Checked" Unchecked="onlyAdminCheckBox_Unchecked" Width="165"/>
            <Button x:Name="clearFiltersButton" Content="Очистить фильтр" Padding="5,8,39,4" Height="30" FontSize="10" Margin="10,0,0,0" Click="clearFiltersButton_Click" Width="109"/>
        </WrapPanel>

        <!-- Список пользователей -->
        <ListView Name="ListUser" Grid.Row="1" HorizontalContentAlignment="Center"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{DynamicResource CenterBackground}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="5">
                        <StackPanel Width="200" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding FIO}" FontSize="16" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <Image Width="180" Height="180" Stretch="UniformToFill" Source="{Binding PhotoImage}" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Role}" FontSize="14" TextAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
